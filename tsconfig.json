{
  "compilerOptions": {
    /* Base Options */
    "target": "es2017", 
    "lib": ["es2017", "dom", "dom.iterable"],
    
    /* Module Settings */
    "module": "none",         // Change from "NodeNext" to "none" for IIFE
    "moduleResolution": "node",
    
    /* Output Options */
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Other Options */
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/vimeo-ott-datalayer.ts"]
}